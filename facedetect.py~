import numpy as np
import cv2

camera = cv2.VideoCapture(0)
while True:
	(_,frame) = camera.read()
	
	(h,w) = frame.shape[:2]
	r = 640/h
	newsize = (640,int(w*r))

	resizedFrame = cv2.resize(frame,newsize,interpolation = cv2.INTER_AREA)
	gray = cv2.cvtColor(resizedFrame,cv2.COLOR_BGR2GRAY)
	cv2.imshow("video captured image",gray)
	cv2.waitKey(1)
